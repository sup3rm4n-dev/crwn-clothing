{
  "compilerOptions": {
    "baseUrl": "./",
    "checkJs": false,
    "paths": {
      "~components": ["src/components"],
      "~context": ["src/context"],
      "~firebase": ["src/firebase"],
      "~helpers": ["src/helpers"],
      "~hooks": ["src/hooks"],
