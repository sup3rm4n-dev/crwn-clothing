{
    "extends": "stylelint-config-recommended-scss",
    "rules": {
        "indentation": ["tab", {
            "except": ["value"]
        }],
        "comment-empty-line-before": [
            "always", {
                "ignore": [
                    "stylelint-commands",
                    "after-comment"
                ]
            }
        ],
        "number-leading-zero": null,
        "color-no-invalid-hex": true,
        "max-empty-lines": 2,
        "rule-empty-line-before": [
            "always", {
                "except": ["first-nested"],
                "ignore": ["after-comment"]
            }
        ]
    }
}